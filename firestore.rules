rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Projects Collection Rules
    match /projects/{projectId} {
      // Allow read for everyone (public) so clients can view by slug
      allow read: if true;
      
      // For creating, check if the new document has the correct ownerId
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      
      // For updating/deleting, check if the existing document belongs to the user
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;

      // Subcollection: Feedbacks
      match /feedbacks/{feedbackId} {
        // Allow anyone to create feedback (clients)
        allow create: if true;
        
        // Allow read only if the user is the owner of the parent project
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
      }
    }

    // Users Collection Rules
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
